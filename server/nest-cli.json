{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/gateway/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/gateway/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/gateway",
  "projects": {

    "gateway": {
      "type": "application",
      "root": "apps/gateway",
      "entryFile": "main",
      "sourceRoot": "apps/gateway/src",
      "compilerOptions": {
        "tsConfigPath": "apps/gateway/tsconfig.app.json",
        "assets": [
          "./proto/*.proto"
        ],
        "watchAssets": true
      }
    },
    "cv-service": {
      "type": "application",
      "root": "apps/cv-service",
      "entryFile": "main",
      "sourceRoot": "apps/cv-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/cv-service/tsconfig.app.json"
      }
    },
    "job-application-service": {
      "type": "application",
      "root": "apps/job-application-service",
      "entryFile": "main",
      "sourceRoot": "apps/job-application-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/job-application-service/tsconfig.app.json",
        "assets": [
          "./proto/*.proto"
        ],
        "watchAssets": true
      }
    },
    "common": {
      "type": "library",
      "root": "libs/common",
      "entryFile": "index",
      "sourceRoot": "libs/common/src",
      "compilerOptions": {
        "tsConfigPath": "libs/common/tsconfig.lib.json"
      }
    },
    "notification-service": {
      "type": "application",
      "root": "apps/notification-service",
      "entryFile": "main",
      "sourceRoot": "apps/notification-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/notification-service/tsconfig.app.json",
        "assets": [
          "./proto/*.proto"
        ],
        "watchAssets": true
      }
    },
    "job": {
      "type": "application",
      "root": "apps/job",
      "entryFile": "main",
      "sourceRoot": "apps/job/src",
      "compilerOptions": {
        "tsConfigPath": "apps/job/tsconfig.app.json"
      }
    },
    "application": {
      "type": "application",
      "root": "apps/application",
      "entryFile": "main",
      "sourceRoot": "apps/application/src",
      "compilerOptions": {
        "tsConfigPath": "apps/application/tsconfig.app.json",
        "assets": ["./proto/*.proto"],
        "watchAssets": true
      }
    }
  }
}